{
  "compilerOptions": 
  {
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "allowSyntheticDefaultImports": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  
  "exclude": [
    "typings",
    "node_modules"
  ],
  "compileOnSave": false
}